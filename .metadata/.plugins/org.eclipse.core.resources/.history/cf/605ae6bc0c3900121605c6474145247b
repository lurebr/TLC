package Timeline.Entidade;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

import Timeline.Entidade.Behavior.isDrawable;
import Timeline.Imagem.Animacao;
import Timeline.Imagem.Imagem;

/**
 *
 * @author Desenv01
 */
public class Block extends GameObject implements isDrawable {
    
    private int posX;
    private int posY;
    private int altura;
    private int largura;
    private boolean allowTower;

    
    public Block(int typeBlock,int posX, int posY, boolean allowTower){
        BufferedImage imagem = Imagem.getInstance().getResourceImage(getCaminho(typeBlock));

        super.animacao = new Animacao(imagem);
        this.altura = imagem.getHeight();
        this.largura = imagem.getWidth();
        this.posX = posX;
        this.posY = posY;
        this.allowTower = allowTower;
    }
    
    private String getCaminho(int i) {
        switch (i){
            case 1:
                return "/Object/Block/grass.png";
            case 2:
                return "/Object/Block/earth.png";
            case 3:
                return "/Object/Block/earth6.png";
            case 4:
                return "/Object/Block/earth6.png";
            case 5:
                return "/Object/Block/earth2.png";
            case 6:
                return "/Object/Block/earth3.png";
            case 7:
                return "/Object/Block/earth4.png";
            case 8:
                return "/Object/Block/earth5.png";
            case 9:
                return "/Object/Block/earth6.png"; 
            case 10:
                return "/Object/Block/earth7.png";
            case 11:
                return "/Object/Block/earth8.png";
            case 12:
                return "/Object/Block/TreeBot.png";
            case 13:
                return "/Object/Block/TreeTop.png";
            case 14:
                return "/Object/Block/deadTreeBot.png";
            case 15:
                return "/Object/Block/deadTreeTop.png";
            case 16:
                return "/Object/Block/rock2.png";
            case 17:
                return "/Object/Block/rock3.png";
            case 18:
                return "/Object/Block/moitaNaMoita.png";
            case 19:
                return "/Object/Block/moitaNaMoitinha.png";
            default:
                return "";
        }
    }
    
    @Override
    public void update(double delta) {
    }

    @Override
    public void draw(Graphics g) {
        super.animacao.draw(g, posY*altura, posX * largura);
    }

    /**
     * @return the allowTower
     */
    public boolean isAllowTower() {
        return allowTower;
    }

    
}
